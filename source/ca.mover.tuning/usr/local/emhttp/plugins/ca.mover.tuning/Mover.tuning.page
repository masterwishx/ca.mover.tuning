document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("StartTuneMoverBtn");
    const status = document.getElementById("MoverStatus");
    const spinner = document.getElementById("MoverSpinner");
    const wrench = document.getElementById("MoverWrench");
    let pollingInterval = null;

    if (!btn || !status || !spinner || !wrench) return;

    function updateUIRunning() {
        btn.disabled = true;
        btn.setAttribute("aria-disabled", "true");
        spinner.style.visibility = "visible";
        status.textContent = "_(Mover is running...)_";
        status.style.color = "";
        wrench.style.color = "var(--gray-500)";
    }

    function updateUIFinished() {
        btn.disabled = false;
        btn.setAttribute("aria-disabled", "false");
        spinner.style.visibility = "hidden";
        status.textContent = "";
        status.style.color = "";
        wrench.style.color = "var(--blue-700)";
    }

    function startPolling() {
        let failureCount = 0;
        const MAX_FAILURES = 5;
        if (pollingInterval) clearInterval(pollingInterval);

        pollingInterval = setInterval(() => {
            $.get("/plugins/ca.mover.tuning/mover.php", { check: 1, _: Date.now() })
                .done((running) => {
                    failureCount = 0;
                    const isRunning = String(running).trim() === "1";
                    if (!isRunning) { // mover finished
                        clearInterval(pollingInterval);
                        pollingInterval = null;
                        updateUIFinished();
                        // Optional: reload after 1s if you want
                        // setTimeout(() => location.reload(), 1000);                        
                    }
                })
                .fail(err => {
                    console.error("Failed to check mover status:", err);
                    failureCount++;
                    if (failureCount >= MAX_FAILURES) {
                        clearInterval(pollingInterval);
                        pollingInterval = null;
                        // Stop "running" UI so the user can retry without a manual refresh
                        updateUIFinished();
                        status.textContent = "_(Error checking mover status. Please refresh the page.)_";
                        status.style.color = "var(--warning)";
                    }
                });
        }, 2000); // 2s is fine
    }

    window.addEventListener("beforeunload", () => {
        if (pollingInterval) clearInterval(pollingInterval);
        pollingInterval = null;
    });

    // If mover already running on page load
    if (btn.disabled) {
        updateUIRunning();
        startPolling();
    }

    // User clicks button
    btn.addEventListener("click", () => {
        updateUIRunning();

        $.post("/plugins/ca.mover.tuning/mover.php", { cmdStartTuneMover: 1 })
            .done(() => {
                // Immediate check to avoid race if mover finishes quickly
                $.get("/plugins/ca.mover.tuning/mover.php", { check: 1, _: Date.now() })
                    .done((running) => {
                        const isRunning = String(running).trim() === "1";
                        if (!isRunning) {
                            updateUIFinished();
                            location.reload();
                        } else {
                            startPolling();
                        }
                    })
                    .fail(() => startPolling());
            })
            .fail(err => {
                console.error("Failed to start mover:", err);
                updateUIFinished();
                alert("_(Failed to start Mover Tuning. Check the logs.)_");
            });
    });
});

